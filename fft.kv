#:kivy 1.8.0

<NewsFeed>
	background_color: 1,1,1,1
	#BoxLayout:
	#	orientation: 'vertical'
	#	Button:
	#		text: "button"
	#		on_press: app.change()
	
	canvas:
		Color:
			rgba: 255,255,255,255
		Rectangle:
			size: root.width, root.height
	BoxLayout:
		orientation: 'vertical'
		AnchorLayout:
			size_hint: 1, None
			anchor_x: 'center'
			anchor_y: 'top'
#			Image:
#				source: 'images/logo.png'
#				on_touch: app.change()
			Button:
				background_down: 'images/logo.png'
				background_normal: 'images/logo.png'
				size_hint: None, None
				size: 150, 95 
				on_press: app.change()
		ScrollView:
			Label:
				text_size: self.width, None
				size_hint_y: None
				color: 0,0,0,1
				text: """Ido posted a picture with Aseel .k.: we had a lot of fun today! Aviv shared his location at Misgav with Moran. Zidane posted a picture with Noy.Aseel .a. shared her location at Nazareth with Saja"""		
				height: self.texture_size[1]

		BoxLayout:
			size_hint: .2, None
			AnchorLayout:
				anchor_x: 'left'
				Button:
					text: "button"
					on_press: app.change()
			AnchorLayout:
				anchor_x: 'right'
				Button:
					text: "button"
					on_press: app.change()





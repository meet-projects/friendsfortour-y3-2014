#:kivy 1.8.0

<NewsFeed>
	background_color: 1,1,1,1
	#BoxLayout:
	#	orientation: 'vertical'
	#	Button:
	#		text: "button"
	#		on_press: app.change()
	
	canvas:
		Color:
			rgba: 255,255,255,255
		Rectangle:
			size: root.width, root.height
	BoxLayout:
		orientation: 'vertical'
		AnchorLayout:
			size_hint: 1, None
			anchor_x: 'center'
			anchor_y: 'top'
#			Image:
#				source: 'images/logo.png'
#				on_touch: app.change()
			Button:
				background_down: 'images/logo.png'
				background_normal: 'images/logo.png'
				size_hint: None, None
				size: 150, 95 
				on_press: app.change()
		ScrollView:
			Label:
				text_size: self.width, None
				size_hint_y: None
				color: 0,0,0,1
				text: "Some really really long string " * 100
				height: self.texture_size[1]

		BoxLayout:
			size_hint: None, .2
			AnchorLayout:
				anchor_x: 'left'
				Button:
					text: "button"
					on_press: app.change()
			AnchorLayout:
				anchor_x: 'right'
				Button:
					text: "button"
					on_press: app.change()




<FindVol>
	#BoxLayout:
	#	orientation: 'vertical'
	#	Button:
	#		text: "button2"
	#		on_press: app.change2()

	canvas:
		Color:
			rgba: 255,255,255,255
		Rectangle:
			size: root.width, root.height
	GridLayout:
		BoxLayout:
			id: findvol_layout
			size: root.width - 80, 200
			pos: 40, root.height - 250
			spacing: 30
			orientation:'vertical'
			TextInput:
				size_hint: 1, 0.05
				id: date_ti
				text: "<Date>  "
			TextInput:
				size_hint: 1, 0.05
				id: city_ti
				text: "<City>  "
			Button:
				size_hint: 1, 0.05
				text: "GO"
				#on_press: root.displayTopRatedVols()
				on_press: app.change2()
